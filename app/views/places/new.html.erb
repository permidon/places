<div class="container page-content">
  <div class="row">
    <div class="span12">
      <div class="box-container">
        <div style="margin-left: auto; margin-right: auto; width: 16em">
          <h2 class="page-title", style="text-align: center">Create a Place</h2>
          <%=  form_for @place do |f| %>
              <%= f.label :name %>
              <%= f.text_field :name %>

              <%= f.label :category_id %>
              <%= f.select :category_id, Category.all.map{ |f| [f.name, f.id] } %>

              <%= f.label :description %>
              <%= f.text_area :description %>

              <%= f.label :address1 %>
              <%= f.text_field :address1 %>

              <%= f.label :address2 %>
              <%= f.text_field :address2 %>

              <%= f.label :city %>
              <%= f.text_field :city %>

              <%= f.label :state %>
              <%= f.text_field :state %>

              <%= f.label :zipcode %>
              <%= f.text_field :zipcode %>

              <!--<%= f.label :country %>-->
              <!--<%= f.text_field :country %>-->

              <%= f.label :phone %>
              <%= f.text_field :phone %>

              <%= f.label :email %>
              <%= f.text_field :email %><br />

              <%= f.label :image %>
              <%= f.file_field :image %><br />

              <%= f.submit class: "btn span3 btn-realto-form btn-large" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
